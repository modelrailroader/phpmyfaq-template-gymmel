{% extends 'index.twig' %}

{% block content %}
<div class="row g-5">
  <div class="col-md-8">
    <h2 class="mb-4 pb-1 border-bottom">{{ categoryHeader }}</h2>

    {{ categoryContent | raw }}

    <p>{{ categoryLevelUp | raw }}</p>
  </div>

  <div class="col-md-4">
    <div class="position-sticky" style="top: 2rem">
      <div class="p-4 mb-3 bg-light-subtle rounded border">
        {% if categoryImage is not empty %}
        <img src="{{ categoryImage }}" alt="{{ categoryFaqsHeader }}" width="140" height="140"
             class="rounded img-fluid float-end m-1">
        {% endif %}
        <h4>{{ categoryFaqsHeader }}</h4>
        <p class="mb-0 small">{{ categoryDescription }}</p>
      </div>

      <div class="p-4 mb-3 bg-light-subtle rounded border">
        <h4>{{ categorySubsHeader }}</h4>
        {{ subCategoryContent | raw }}
      </div>

      <div class="p-4 mb-3 bg-light-subtle border rounded"> <!-- iPad-Beratungszeiten | ACHTUNG: In faq.html und show.html -->
        <h4>iPad-Beratung</h4>
        <div>
          <p>Michael Schoster steht zu folgenden Zeiten in <b>Raum 312a</b> (beim Klausurraum) bei Fragen und Problemen zur Verf√ºgung:<br></p>
          <p><b>Mo - Do: 08:30 - 12:00 Uhr</b></p>
        </div>
      </div>

    </div>
  </div>
</div>

{% endblock %}
